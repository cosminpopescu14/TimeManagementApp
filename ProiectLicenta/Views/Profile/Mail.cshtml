@model ProiectLicenta.DTO.EMailMessage
@{
    ViewBag.Title = "Mail";
}

<h2>Mail</h2>

@using (Html.BeginForm("SendMail", "Profile"))  //cream formularul pt mail
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.To, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.To, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.To)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Subject, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Subject, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Subject)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.MessageContent, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextAreaFor(m => m.MessageContent, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.MessageContent)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Send" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}