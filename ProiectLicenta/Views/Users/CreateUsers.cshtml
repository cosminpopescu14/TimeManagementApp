<!--Pagina pentru adaugare utilizatori-->
@{
    ViewBag.Title = "CreateUsers";
}

@model ProiectLicenta.DTO.Users

<h2>CreateUsers</h2>

@using (Html.BeginForm("AddUsers", "Users"))//creare formular inregistrare
{
    @Html.AntiForgeryToken()

    
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Nume_utilizator, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Nume_utilizator, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Nume_utilizator, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Parola, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Parola, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Parola, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Create" />
        </div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}